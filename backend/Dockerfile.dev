FROM golang:1.21-alpine AS development

# 安装必要工具
RUN apk add --no-cache git make

# 设置工作目录
WORKDIR /app

# 复制 go mod 文件
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 安装 air 用于热重载
RUN go install github.com/cosmtrek/air@latest

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 8080

# 使用 air 启动应用（热重载）
CMD ["air", "-c", ".air.toml"]